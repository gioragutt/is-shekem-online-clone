{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2017"
    ],
    "strictNullChecks": true,
    "declarationDir": "node_modules/@types",
    "esModuleInterop": true,
    "removeComments": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "dist",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "tests/**/*.spec.ts",
    "src/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
}